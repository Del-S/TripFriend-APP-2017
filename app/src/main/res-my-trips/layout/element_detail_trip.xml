<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">


    <android.support.constraint.ConstraintLayout
        android:id="@+id/edt_llt_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/edt_location_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/edt_guideline_location">

            <TextView
                android:id="@+id/edt_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_location_title"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/edt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_location"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_location_title"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/edt_guideline_location"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/edt_language_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintRight_toLeftOf="@+id/edt_guideline_language"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/edt_guideline_location">

            <TextView
                android:id="@+id/edt_language_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_language_title"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/edt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_language"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_language_title"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/edt_guideline_language"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/edt_timespan_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/edt_guideline_language">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/fpt_timespan_title"
                android:id="@+id/edt_timespan_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:text="@string/fpt_timespan"
                android:id="@+id/edt_timespan"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_timespan_title"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/edt_llt_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/edt_divider_llt" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edt_dt_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/edt_divider_llt"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/edt_date_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            app:layout_constraintRight_toLeftOf="@+id/edt_guideline_time"
            android:layout_marginRight="8dp"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:text="@string/edt_date_time_title"
                android:id="@+id/edt_date_time_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edt_date_time_title"
                android:textAlignment="center"
                android:id="@+id/edt_date_time"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_date_time_title"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintLeft_toLeftOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/edt_guideline_time"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.5" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/edt_time_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/edt_guideline_time"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="0dp"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent">

            <TextView
                android:id="@+id/edt_preferences_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/edt_preferences_title"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <TextView
                android:id="@+id/edt_preferences"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/edt_preferences"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/edt_preferences_title"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/edt_dt_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/edt_divider_dt" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/edt_friend_dt"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/edt_divider_dt">

        <TextView
            android:id="@+id/edt_friend_title"
            android:text="@string/edt_friend_title"
            android:textAlignment="center"
            android:textAppearance="?android:attr/textAppearanceMedium"
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            android:layout_marginLeft="8dp"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_marginTop="8dp" />

        <ImageView
            android:id="@+id/edt_friend_image"
            android:layout_width="100dp"
            android:layout_height="100dp"
            app:layout_constraintTop_toTopOf="@+id/edt_friend_title"
            app:layout_constraintBottom_toBottomOf="parent"
            android:layout_marginBottom="8dp"
            android:layout_marginLeft="15dp"
            app:layout_constraintLeft_toLeftOf="parent" />

        <TextView
            android:id="@+id/edt_friend_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rif_name_title"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_friend_title"
            app:layout_constraintLeft_toRightOf="@+id/edt_friend_image"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/edt_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/edt_friend_name"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_friend_title"
            app:layout_constraintLeft_toRightOf="@+id/edt_friend_name_title"
            android:layout_marginLeft="15dp" />

        <TextView
            android:id="@+id/edt_friend_languages_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rif_languages_title"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginTop="12dp"
            app:layout_constraintTop_toBottomOf="@+id/edt_friend_name_title"
            android:layout_marginLeft="0dp"
            app:layout_constraintLeft_toLeftOf="@+id/edt_friend_name_title" />

        <LinearLayout
            android:id="@+id/edt_languages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginRight="8dp"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintLeft_toRightOf="@+id/edt_friend_languages_title"
            android:layout_marginLeft="8dp"
            app:layout_constraintTop_toTopOf="@+id/edt_friend_languages_title"
            app:layout_constraintBottom_toBottomOf="@+id/edt_friend_languages_title">

            <ImageView
                android:layout_width="44dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/logo_people_500px"
                android:layout_margin="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/logo_people_500px"
                android:layout_margin="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

            <ImageView
                android:layout_width="44dp"
                android:layout_height="20dp"
                app:srcCompat="@drawable/logo_people_500px"
                android:layout_margin="2dp"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent" />

        </LinearLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/edt_friend_dt"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/edt_divider_friend" />

    <android.support.constraint.Guideline
        android:id="@+id/edt_guideline_buttons"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.5" />

    <Button
        android:id="@+id/edt_edit_trip"
        android:text="@string/edt_edit_trip"
        android:background="@drawable/button_colored"
        android:textColor="@android:color/white"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@+id/edt_guideline_buttons"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintBottom_toBottomOf="parent" />

    <Button
        android:id="@+id/edt_delete_trip"
        android:text="@string/edt_delete_trip"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:background="@drawable/button_classic"
        android:layout_marginTop="0dp"
        app:layout_constraintTop_toBottomOf="@id/edt_divider_friend"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintLeft_toRightOf="@+id/edt_edit_trip"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintHorizontal_bias="0.0" />

</android.support.constraint.ConstraintLayout>