<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/ert_icon"
        android:layout_width="50dp"
        android:layout_height="50dp"
        app:srcCompat="@drawable/ic_home_gray_24dp"
        android:layout_marginLeft="15dp"
        android:layout_marginStart="15dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toBottomOf="parent" />

    <TextView
        android:id="@+id/ert_city"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ert_city"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Medium"
        android:textColor="@color/colorPrimaryDark"
        app:layout_constraintLeft_toRightOf="@+id/ert_icon"
        android:layout_marginLeft="15dp"
        app:layout_constraintTop_toTopOf="@+id/ert_icon"
        android:layout_marginTop="3dp" />

    <TextView
        android:id="@+id/ert_date_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/ert_date_time"
        android:textAppearance="@style/Base.TextAppearance.AppCompat.Small"
        app:layout_constraintLeft_toRightOf="@+id/ert_icon"
        android:layout_marginLeft="15dp"
        app:layout_constraintBottom_toBottomOf="@+id/ert_icon"
        app:layout_constraintTop_toBottomOf="@+id/ert_city" />

    <ImageView
        android:id="@+id/ert_expand"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:srcCompat="@drawable/ic_expand_more_24dp"
        app:layout_constraintTop_toTopOf="@+id/ert_icon"
        android:layout_marginTop="0dp"
        app:layout_constraintBottom_toBottomOf="@+id/ert_icon"
        android:layout_marginBottom="0dp"
        android:layout_marginEnd="20dp"
        app:layout_constraintRight_toRightOf="parent" />

</android.support.constraint.ConstraintLayout>