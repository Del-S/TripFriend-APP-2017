<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/rif_friend_image"
        android:layout_width="100dp"
        android:layout_height="100dp"
        app:srcCompat="@drawable/logo_people_500px"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        app:layout_constraintTop_toBottomOf="@+id/rif_friend_image"
        app:layout_constraintRight_toRightOf="@+id/rif_friend_image"
        app:layout_constraintLeft_toLeftOf="@+id/rif_friend_image"
        android:id="@+id/linearLayout">

        <TextView
            android:id="@+id/rif_friend_name_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rif_name_title"
            android:textColor="@color/colorPrimaryDark"
            android:layout_marginEnd="15dp"/>

        <TextView
            android:id="@+id/rif_friend_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rif_name_title"/>

    </LinearLayout>

    <TextView
        android:id="@+id/rif_languages_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/rif_languages_title"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="5dp"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout"
        app:layout_constraintRight_toRightOf="@+id/linearLayout"
        app:layout_constraintLeft_toLeftOf="@+id/linearLayout" />

    <LinearLayout
        android:id="@+id/rif_languages"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="6dp"
        app:layout_constraintTop_toBottomOf="@+id/rif_languages_title"
        android:layout_marginRight="8dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="8dp"
        app:layout_constraintLeft_toLeftOf="parent">

        <ImageView
            android:layout_width="44dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/logo_people_500px"
            android:layout_margin="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/logo_people_500px"
            android:layout_margin="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

        <ImageView
            android:layout_width="44dp"
            android:layout_height="20dp"
            app:srcCompat="@drawable/logo_people_500px"
            android:layout_margin="2dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent" />

    </LinearLayout>

</android.support.constraint.ConstraintLayout>