<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.Guideline
        android:id="@+id/fpt3_guideline"
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.3"/>

    <TextView
        android:id="@+id/fpt3_name_title"
        android:text="@string/fpt3_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fpt3_name"
        app:layout_constraintBottom_toBottomOf="@+id/fpt3_name"/>

    <EditText
        android:id="@+id/fpt3_name"
        android:hint="@string/fpt3_name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/fpt3_guideline" />

    <TextView
        android:id="@+id/fpt3_surname_title"
        android:text="@string/fpt3_surname_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fpt3_surname"
        app:layout_constraintBottom_toBottomOf="@+id/fpt3_surname"/>

    <EditText
        android:id="@+id/fpt3_surname"
        android:hint="@string/fpt3_surname"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpt3_name"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/fpt3_guideline" />

    <TextView
        android:id="@+id/fpt3_email_title"
        android:text="@string/fpt3_email_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fpt3_email"
        app:layout_constraintBottom_toBottomOf="@+id/fpt3_email"/>

    <EditText
        android:id="@+id/fpt3_email"
        android:hint="@string/fpt3_email"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:inputType="textEmailAddress"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpt3_surname"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/fpt3_guideline" />

    <TextView
        android:id="@+id/fpt3_phone_title"
        android:text="@string/fpt3_phone_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fpt3_phone"
        app:layout_constraintBottom_toBottomOf="@+id/fpt3_phone"/>

    <EditText
        android:id="@+id/fpt3_phone"
        android:hint="@string/fpt3_phone"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginRight="10dp"
        android:inputType="phone"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpt3_email"
        android:layout_marginTop="8dp"
        app:layout_constraintLeft_toLeftOf="@+id/fpt3_guideline" />

    <TextView
        android:id="@+id/fpt3_pickup_title"
        android:text="@string/fpt3_pickup_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fpt3_phone" />

    <EditText
        android:id="@+id/fpt3_pickup"
        android:hint="@string/fpt3_pickup"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="3"
        app:layout_constraintTop_toBottomOf="@id/fpt3_pickup_title"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <TextView
        android:id="@+id/fpt3_notes_title"
        android:text="@string/fpt3_notes_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAppearance="?android:textAppearanceMedium"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginStart="10dp"
        android:layout_marginTop="12dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/fpt3_pickup" />

    <EditText
        android:id="@+id/fpt3_notes"
        android:hint="@string/fpt3_notes"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:inputType="textCapSentences|textMultiLine"
        android:lines="3"
        app:layout_constraintTop_toBottomOf="@id/fpt3_notes_title"
        android:layout_marginTop="8dp"
        android:layout_marginRight="20dp"
        app:layout_constraintRight_toRightOf="parent"
        android:layout_marginLeft="20dp"
        app:layout_constraintLeft_toLeftOf="parent" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fpt3_book"
        android:id="@+id/fpt3_book"
        android:textColor="@android:color/white"
        android:background="@drawable/button_colored"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintBottom_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>