<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fpt_llt_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fpt_location_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:paddingTop="10dp"
            android:paddingStart="10dp"
            android:paddingEnd="5dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintRight_toLeftOf="@+id/fpt_guideline_location">

            <TextView
                android:id="@+id/fpt_location_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_location_title"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/fpt_location"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_location"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/fpt_location_title"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/fpt_guideline_location"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fpt_language_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="5dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintRight_toLeftOf="@+id/fpt_guideline_language"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/fpt_guideline_location">

            <TextView
                android:id="@+id/fpt_language_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_language_title"
                android:textColor="@color/colorPrimaryDark"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:id="@+id/fpt_language"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_language"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/fpt_language_title"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/fpt_guideline_language"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fpt_timespan_wrapper"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="12dp"
            android:clickable="true"
            android:background="?attr/selectableItemBackground"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintLeft_toLeftOf="@+id/fpt_guideline_language">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:text="@string/fpt_timespan_title"
                android:id="@+id/fpt_timespan_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_marginRight="8dp"
                android:layout_marginLeft="8dp"
                app:layout_constraintRight_toRightOf="parent" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAppearance="?android:attr/textAppearanceSmall"
                android:textAlignment="center"
                android:text="@string/fpt_timespan"
                android:id="@+id/fpt_timespan"
                android:layout_marginTop="4dp"
                app:layout_constraintTop_toBottomOf="@+id/fpt_timespan_title"
                android:layout_marginLeft="8dp"
                app:layout_constraintLeft_toLeftOf="parent"
                android:layout_marginRight="8dp"
                app:layout_constraintRight_toRightOf="parent" />

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/fpt_llt_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/fpt_divider_llt" />

    <android.support.constraint.ConstraintLayout
        android:id="@+id/fpt_dt_wrapper"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintTop_toBottomOf="@id/fpt_divider_llt"
        app:layout_constraintRight_toRightOf="parent">

        <android.support.constraint.Guideline
            android:id="@+id/fpt_guideline_date"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.33"/>

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fpt_date_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingTop="10dp"
            android:paddingStart="5dp"
            android:paddingEnd="10dp"
            android:paddingBottom="14dp"
            app:layout_constraintLeft_toLeftOf="@+id/fpt_guideline_date"
            app:layout_constraintRight_toLeftOf="@+id/fpt_guideline_date"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textAlignment="center"
                android:text="@string/fpt_date_title"
                android:id="@+id/fpt_date_title"
                android:textAppearance="?android:attr/textAppearanceMedium"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/fpt_date"
                android:id="@+id/fpt_date"
                android:background="@drawable/button_border"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:minHeight="0dp"
                android:textColor="@color/colorOrange"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/fpt_date_title"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </android.support.constraint.ConstraintLayout>

        <android.support.constraint.Guideline
            android:id="@+id/fpt_guideline_time"
            android:layout_width="1dp"
            android:layout_height="match_parent"
            android:orientation="vertical"
            app:layout_constraintGuide_percent="0.66" />

        <android.support.constraint.ConstraintLayout
            android:id="@+id/fpt_time_wrapper"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingBottom="14dp"
            android:paddingEnd="10dp"
            android:paddingStart="5dp"
            android:paddingTop="10dp"
            app:layout_constraintLeft_toLeftOf="@+id/fpt_guideline_time"
            app:layout_constraintRight_toLeftOf="@+id/fpt_guideline_time"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/fpt_time_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="4dp"
                android:text="@string/fpt_time_title"
                android:textAlignment="center"
                android:textAppearance="?android:attr/textAppearanceMedium"
                android:textColor="@color/colorPrimaryDark"
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintRight_toRightOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <Button
                android:id="@+id/fpt_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:background="@drawable/button_border"
                android:paddingStart="10dp"
                android:paddingEnd="10dp"
                android:paddingBottom="12dp"
                android:paddingTop="12dp"
                android:minHeight="0dp"
                android:text="@string/fpt_time"
                android:textColor="@color/colorOrange"
                android:layout_marginTop="6dp"
                app:layout_constraintTop_toBottomOf="@+id/fpt_time_title"
                app:layout_constraintLeft_toLeftOf="parent"/>

        </android.support.constraint.ConstraintLayout>

    </android.support.constraint.ConstraintLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="1dp"
        android:background="@color/colorDivider"
        app:layout_constraintTop_toBottomOf="@+id/fpt_dt_wrapper"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        tools:layout_editor_absoluteX="0dp"
        android:id="@+id/fpt_divider_dt" />

    <TextView
        android:id="@+id/fpt_preferences_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/fpt_preferences_title"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="@+id/fpt_divider_dt"
        app:layout_constraintHorizontal_bias="0.501" />

    <GridView
        android:id="@+id/fpt_preferences"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:numColumns="2"
        app:layout_constraintTop_toBottomOf="@+id/fpt_preferences_title"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.0"
        android:layout_marginTop="0dp"
        android:layout_marginBottom="8dp"
        app:layout_constraintBottom_toTopOf="@+id/fpt_find_friend" />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/fpt_find_friend"
        android:id="@+id/fpt_find_friend"
        android:textColor="@android:color/white"
        android:background="@drawable/button_colored"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintHorizontal_bias="0.505"
        app:layout_constraintBottom_toTopOf="parent" />

</android.support.constraint.ConstraintLayout>
